{
	"editor.fontFamily": "Cascadia Code PL",
	//"editor.fontFamily": "JetBrains Mono",
	//"editor.fontFamily": "Fira Code Medium, SFMono Nerd Font Mono, JetBrains Mono",
	"editor.inlayHints.fontFamily": "Cascadia Code PL",
	"editor.fontSize": 16,
	"editor.fontWeight": "600",
	"editor.fontLigatures": true,
	"editor.tabSize": 4,
	"editor.insertSpaces": false,
	"editor.quickSuggestions": {
		"other": "on",
		"comments": "on",
		"strings": "on"
	},
	// "editor.quickSuggestionsDelay": 200,
	"editor.rulers": [160],
	"editor.renderWhitespace": "boundary",
	"editor.renderLineHighlight": "all",
	"editor.dragAndDrop": false,
	"editor.smoothScrolling": true,
	"editor.cursorSmoothCaretAnimation": false,
	"editor.cursorBlinking": "smooth",
	"editor.wordWrap": "on",
	"editor.wordWrapColumn": 160,
	"editor.minimap.enabled": false,
	// "editor.minimap.renderCharacters": true,
	// "editor.minimap.showSlider": "mouseover",
	// "editor.minimap.maxColumn": 140,
	// "editor.minimap.scale": 1,
	"editor.snippetSuggestions": "bottom",
	"editor.hover.delay": 200,
	"editor.suggest.localityBonus": true,
	"editor.suggest.preview": true,
	"editor.suggestSelection": "recentlyUsedByPrefix",
	"editor.bracketPairColorization.enabled": true,
	"editor.codeActionsOnSave": {
		"source.addMissingImports": true,
		"source.organizeImports": false,
		"source.fixAll.eslint": true,
		"source.fixAll": true
	},
	"editor.formatOnPaste": false,
	"editor.formatOnType": false,
	"editor.formatOnSave": false,
	"editor.formatOnSaveMode": "file",
	"editor.autoIndent": "full",
	"editor.linkedEditing": true,
	"editor.semanticHighlighting.enabled": true,
	"editor.parameterHints.cycle": true,
	"editor.suggest.showStatusBar": true,
	"editor.maxTokenizationLineLength": 1000000000,
	"files.maxMemoryForLargeFilesMB": 104096,
	"editor.gotoLocation.multipleDeclarations": "goto",
	"editor.gotoLocation.multipleDefinitions": "goto",
	"editor.gotoLocation.multipleImplementations": "goto",
	"editor.gotoLocation.multipleReferences": "goto",
	"editor.gotoLocation.multipleTypeDefinitions": "goto",
	"editor.multiCursorModifier": "alt",
	"editor.find.cursorMoveOnType": true,
	"editor.scrollbar.verticalScrollbarSize": 24,
	"editor.guides.bracketPairs": true,
	"editor.stickyScroll.enabled": true,

	"diffEditor.maxComputationTime": 0,

	"breadcrumbs.symbolSortOrder": "name",
	"workbench.editor.enablePreview": false,
	"workbench.editor.enablePreviewFromQuickOpen": false,
	"workbench.startupEditor": "newUntitledFile",
	"workbench.list.multiSelectModifier": "alt",
	"workbench.editor.highlightModifiedTabs": true,
	"workbench.colorTheme": "Cobalt2",
	"workbench.iconTheme": "ayu",
	"workbench.settings.editor": "json",
	"workbench.settings.useSplitJSON": true,
	"workbench.tree.indent": 16,
	"workbench.tree.renderIndentGuides": "always",
	"workbench.editor.limit.enabled": false,
	"workbench.editor.scrollToSwitchTabs": true,
	"workbench.editor.pinnedTabSizing": "compact",
	"problems.showCurrentInStatus": true,
	"window.title": "${dirty}${rootName}${separator}${activeEditorShort}${separator}VSCode",
	"window.titleBarStyle": "native",
	"window.newWindowDimensions": "maximized",
	"window.menuBarVisibility": "toggle",
	"window.restoreWindows": "none",
	"window.closeWhenEmpty": true,
	"window.customMenuBarAltFocus": false,
	"explorer.confirmDelete": false,

	"terminal.integrated.profiles.linux": {
		"zsh": {
			"path": "zsh",
			"default": true
		},
	},
	"terminal.external.linuxExec": "konsole",
	"terminal.integrated.copyOnSelection": true,
	"terminal.integrated.tabs.enabled": false,
	"terminal.integrated.enableBell": true,
	"terminal.integrated.gpuAcceleration": "on",
	"terminal.integrated.enablePersistentSessions": false,
	"terminal.integrated.shellIntegration.enabled": true,

	"files.insertFinalNewline": true,
	"files.trimTrailingWhitespace": true,
	"files.trimFinalNewlines": true,
	"files.encoding": "utf8",
	"files.autoSave": "onFocusChange",
	"files.defaultLanguage": "${activeEditorLanguage}",
	"files.associations": {
		"*.mustache": "html",
		"*.user": "jsonc",
		".tslintrc": "jsonc",
		"*.json": "jsonc",
		"*.html": "html",
		"*.go2": "go"
	},
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/*.pprof": true,
		"**/*.prof": true,
		"**/*.test": true,
		"**/*.db": true,
		"**/*.min.js": true,
		"**/*compiled.js": true,
		"**/*.js": {
			"when": "$(basename).ts"
		},
		"**/*.map": {
			"when": "$(basename).map"
		},
		"**/node_modules": true
	},
	"search.showLineNumbers": true,
	"search.smartCase": true,
	"search.quickOpen.includeSymbols": true,
	"search.quickOpen.history.filterSortOrder": "recency",
	"search.searchOnType": false,
	"debug.inlineValues": "on",
	"debug.onTaskErrors": "abort",
	"debug.javascript.usePreview": true,
	"debug.showSubSessionsInToolBar": true,
	"debug.allowBreakpointsEverywhere": true,
	"[css]": {
		"editor.formatOnSave": false,
		"editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
	},
	"[scss]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
	},
	"[javascript]": {
		"editor.formatOnSave": false,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascriptreact]": {
		"editor.formatOnSave": false,
		"editor.defaultFormatter": "dbaeumer.vscode-eslint"
	},
	"[typescriptreact]": {
		"editor.formatOnSave": false,
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	"[typescript]": {
		"editor.formatOnSave": false,
		"editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
	},
	"[html]": {
		"editor.defaultFormatter": "vscode.html-language-features"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"[json]": {
		"editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
	},
	"typescript.suggest.completeFunctionCalls": true,
	"typescript.updateImportsOnFileMove.enabled": "always",
	"typescript.referencesCodeLens.enabled": false,
	"typescript.implementationsCodeLens.enabled": false,
	"typescript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
	"typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": false,
	"typescript.format.insertSpaceAfterOpeningAndBeforeClosingEmptyBraces": false,
	"typescript.preferences.quoteStyle": "double",
	"typescript.disableAutomaticTypeAcquisition": false,
	"typescript.enablePromptUseWorkspaceTsdk": true,
	"javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
	"javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": false,
	"javascript.format.insertSpaceAfterOpeningAndBeforeClosingEmptyBraces": false,
	"javascript.preferences.quoteStyle": "double",
	"javascript.updateImportsOnFileMove.enabled": "always",
	"javascript.format.semicolons": "insert",
	"js/ts.implicitProjectConfig.checkJs": true,
	"npm.packageManager": "yarn",

	"eslint.run": "onSave",
	"eslint.format.enable": true,
	"eslint.packageManager": "yarn",
	// "eslint.nodePath": "/home/oneofone/.config/yarn/global/node_modules/",
	"eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
	"eslint.lintTask.enable": false,
	"eslint.quiet": false,

	"prettier.jsxBracketSameLine": true,
	"prettier.singleQuote": false,
	"prettier.quoteProps": "consistent",
	"prettier.tabWidth": 4,
	"prettier.trailingComma": "es5",
	"prettier.useTabs": true,
	"prettier.arrowParens": "always",
	"prettier.htmlWhitespaceSensitivity": "ignore",
	"prettier.printWidth": 140,
	"html.format.wrapLineLength": 140,
	"html.format.wrapAttributes": "auto",
	"yaml.format.enable": true,
	"yaml.format.printWidth": 140,
	"python.linting.pylintEnabled": false,
	"python.linting.mypyEnabled": true,
	"python.linting.enabled": true,
	"python.formatting.provider": "black",

	"C_Cpp.clang_format_fallbackStyle": "Google",

	"[go]": {
		"editor.insertSpaces": false,
		"editor.formatOnSave": true,
		"editor.formatOnSaveMode": "file",
		"editor.codeActionsOnSave": {
			"source.organizeImports": true,
			"source.fixAll": true
		}
	},

	"go.lintOnSave": "off",
	"go.buildFlags": ["-tags", "typeparams"],
	"go.testFlags": ["-v", "-count=1", "-benchtime=5s", "-timeout=5m", "-vet=off"],
	"go.coverMode": "default",
	"go.coverShowCounts": true,
	"go.editorContextMenuCommands": {
		"toggleTestFile": true,
		"addTags": true,
		"removeTags": false,
		"testAtCursor": false,
		"testFile": false,
		"testPackage": true,
		"generateTestForFunction": true,
		"generateTestForFile": false,
		"generateTestForPackage": false,
		"addImport": false,
		"testCoverage": false,
		"playground": false,
		"debugTestAtCursor": true
	},
	"go.addTags": {
		"tags": "json",
		"options": "json=omitempty",
		"promptForTags": false,
		"transform": "camelcase"
	},
	"go.coverOnSingleTest": true,
	"go.toolsManagement.checkForUpdates": "off",
	"go.enableCodeLens": {
		"references": false,
		"runtest": false
	},
	"go.delveConfig": {
		"only-same-user":false,
		"apiVersion": 2,
		"showGlobalVariables": false,
		"hideSystemGoroutines": true
	},
	"go.languageServerExperimentalFeatures": {
		"diagnostics": true
	},
	//"go.languageServerFlags": ["-rpc.trace"],
	"gopls": {
		"formatting.gofumpt": true,
		"ui.diagnostic.staticcheck": true,
		"ui.diagnostic.analyses": {
			"ST1000": false,
			"ST1003": false,
			"SA5001": false,
			"SA1026": false,
			"nilness": false,
			"unusedwrite": false,
			"unusedparams": false,
			// too much noise
			"fieldalignment": true,
			"shadow": false,
			"composites": true
		},
		"ui.codelenses": {
			"generate": true,
			"regenerate_cgo": true,
			"test": true,
			"vendor": true,
			"tidy": true,
			"upgrade_dependency": true,
			"gc_details": true
		},
		"ui.diagnostic.annotations": {
			"bounds": true,
			"inline": true,
			"escape": true,
			"nil": true
		},

		"ui.completion.usePlaceholders": false,
		"ui.navigation.importShortcut": "Definition",
		"ui.completion.completionBudget": "200ms",
		"ui.diagnostic.diagnosticsDelay": "500ms",

		"build.allowImplicitNetworkAccess": true,
		"build.directoryFilters": ["-node_modules", "-data"],

		"ui.completion.experimentalPostfixCompletions": true,
		"build.experimentalPackageCacheKey": true
	},
	"rust.all_features": true,
	"html.format.endWithNewline": true,
	"html.format.maxPreserveNewLines": 1,
	"html.format.extraLiners": "-",
	"markdownlint.config": {
		"MD010": false,
		"MD013": false,
		"MD033": false,
		"MD040": false
	},
	"emmet.showSuggestionsAsSnippets": true,
	"php.suggest.basic": false,

	"csv-edit.initiallyHideComments": true,
	"csv-edit.readOption_hasHeader": "true",
	"csv-edit.writeOption_hasHeader": "true",

	"git.autofetch": true,
	"git.confirmSync": false,
	"git.experimental.mergeEditor": true,
	"git.enableSmartCommit": true,
	"git.enableCommitSigning": true,
	"git.autoRepositoryDetection": false,
	"git.untrackedChanges": "separate",
	"git.closeDiffOnOperation": true,
	"gitlens.views.repositories.includeWorkingTree": true,
	"gitlens.views.repositories.files.layout": "tree",
	"gitlens.views.branches.files.layout": "tree",
	"gitlens.codeLens.enabled": true,
	"gitlens.advanced.messages": {
		"suppressCommitHasNoPreviousCommitWarning": false,
		"suppressCommitNotFoundWarning": false,
		"suppressFileNotUnderSourceControlWarning": false,
		"suppressGitVersionWarning": false,
		"suppressLineUncommittedWarning": false,
		"suppressNoRepositoryWarning": false
	},
	"gitlens.keymap": "none",
	"gitlens.statusBar.reduceFlicker": true,
	"gitlens.mode.active": "review",
	"gitlens.menus": {
		"editor": false,
		"editorGroup": {
			"blame": true,
			"compare": true,
			"history": false,
			"remote": false
		},
		"editorTab": {
			"compare": false,
			"history": true,
			"remote": true
		},
		"explorer": {
			"compare": true,
			"history": true,
			"remote": true
		}
	},
	"gitlens.mode.statusBar.enabled": false,
	"gitlens.fileAnnotations.command": "blame",
	"gitlens.views.commits.files.layout": "tree",
	"cSpell.allowCompoundWords": true,
	"cSpell.enabled": true,
	"cSpell.numSuggestions": 10,
	"cSpell.userWords": [
		"alpineiq",
		"ALPN",
		"antd",
		"anyx",
		"apiserv",
		"apiv",
		"ASTs",
		"autofetch",
		"bbolt",
		"biton",
		"boltdb",
		"Cascadia",
		"Cashout",
		"cmds",
		"Cmps",
		"cooookie",
		"CORS",
		"csel",
		"dbolt",
		"dups",
		"Elts",
		"etag",
		"evts",
		"fatih",
		"favicon",
		"Fira",
		"fname",
		"fset",
		"genh",
		"gmail",
		"gogetdoc",
		"goimports",
		"golang",
		"gometalinter",
		"Gruvbox",
		"gserv",
		"gzonce",
		"gzpools",
		"HSTS",
		"IDFAs",
		"Influencers",
		"Injectable",
		"inplace",
		"iodb",
		"jsbeautify",
		"jsonp",
		"JSONP",
		"julienschmidt",
		"konsole",
		"linkedin",
		"mbbolt",
		"mkey",
		"Mones",
		"MSGP",
		"nocheckptr",
		"noindex",
		"nolint",
		"noopen",
		"nsep",
		"nums",
		"oerrs",
		"oneofone",
		"pidx",
		"pprof",
		"Protos",
		"prox",
		"Ptrs",
		"rbuf",
		"redir",
		"reqs",
		"retargeting",
		"samp",
		"signup",
		"sqlite",
		"strs",
		"struct",
		"structs",
		"tmpl",
		"TODO",
		"uids",
		"uint",
		"ulimit",
		"Unimported",
		"unmarshals",
		"uuid",
		"vals",
		"vmihailenco",
		"wakenn",
		"xast",
		"xerrors",
		"xonsh"
	],
	"cSpell.ignoreRegExpList": ["0x[a-f0-9]+", "<?[\\w.\\-+]+@\\w+(\\.\\w+)+>?"],
	"cSpell.ignorePaths": ["**/node_modules/**", "**/vscode-extension/**", "**/.git/**", ".vscode", "typings", ".gitignore"],
	"cSpell.flagWords": ["hte"],
	"cSpell.spellCheckDelayMs": 100,

	"extensions.autoUpdate": true,
	"extensions.ignoreRecommendations": true,
	"workbench.settings.enableNaturalLanguageSearch": false,
	"workbench.enableExperiments": false,
	"npm.fetchOnlinePackageInfo": false,
	"telemetry.telemetryLevel": "off",
	"editor.largeFileOptimizations": false,
	"json.maxItemsComputed": 50000,
	"json.schemas": [],
	"update.mode": "manual",
	"security.workspace.trust.untrustedFiles": "open",
	"diffEditor.ignoreTrimWhitespace": false,
	"Lua.completion.callSnippet": "Both",
	"Lua.diagnostics.enable": true,
	"Lua.hint.enable": true,
	"editor.cursorStyle": "block",
	"python.insidersChannel": "weekly",
	"redhat.telemetry.enabled": true,
	"editor.guides.indentation": true,
	"editor.inlineSuggest.enabled": true,
	"Lua.telemetry.enable": false,
	"githubPullRequests.pullBranch": "never"
}
